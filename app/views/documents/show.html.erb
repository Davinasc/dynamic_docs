<p id="notice"><%= notice %></p>

<h1>
  <%= @document.nome %>
  <small class="doc_data">
    <i class="fa fa-calendar-o" aria-hidden="true"></i>
    <%= @document.created_at %>
  </small>
  <button type="button" class="btn btn-info btn-sm">
    <%= link_to 'Editar', edit_template_document_path(@document.template, @document) %>
  </button>
</h1>

<br>

<h4>
  <strong>Template: </strong>
  <small>
    <%= link_to @document.template.nome, template_path(@document.template) %>
  </small>
</h4>

<br>

<h4>
  <strong>Tipo: </strong>
  <small>
    <%= link_to @document.template.type.nome %>
  </small>
</h4>

<br>

<h4><strong>Campos: </strong></h4>
<% @document.campos.each {|campo, valor| %>
  <p><%="##{campo}:"%></p><%=" #{valor} "%>
<% } %>

<br>

<h4 class="text-center"><strong>Texto</strong></h4>
<div class="text-right">
  <button type="button" class="btn btn-danger btn-sm">
    <%= link_to 'PDF', document_pdf_path(@document), target: '_blank'%>
  </button>

  <button type="button" class="btn btn-primary btn-sm">
    <%= link_to 'DOC', document_word_path(@document)%>
  </button>
</div>

<hr>
  <%= raw @document.texto %>
<hr>
