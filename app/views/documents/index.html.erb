<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Template</th>
      <th>Campos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.template.type.nome %></td>
        <td><%= document.campos %></td>
        <td><%= document.texto %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_template_document_path(document.template, document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
