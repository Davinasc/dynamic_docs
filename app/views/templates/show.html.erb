<p id="notice"><%= notice %></p>

<h1>
  <%= @template.nome %>
  <small class="doc_data">
    <i class="fa fa-calendar-o" aria-hidden="true"></i>
    <%= @template.created_at %>
  </small>
  <button type="button" class="btn btn-info btn-sm">
    <%= link_to 'Editar', edit_template_path(@template) %>
  </button>
</h1>

<br>

<h4>
  <strong>Tipo: </strong>
  <small>
    <%= link_to @template.type.nome %>
  </small>
</h4>

<br>

<h4>
  <strong>Variaveis: </strong>
  <small>
    <%= @template.variaveis %>
  </small>
</h4>

<br>

<h4 class="text-center"><strong>Texto</strong></h4>
<hr>
  <%= raw @template.texto %>
<hr>
